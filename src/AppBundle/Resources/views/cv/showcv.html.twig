{% extends 'AppBundle::layout.html.twig' %}

{% block title %}Clément CARDARELLI{% endblock %}

{% block body %}
    <div>
        Etudiant en Informatique, <br/>
        curieu et organisé
    </div>
    <div class="myinfo">
        <div>
            <img src="{{ asset('assets/img/profile.JPG') }}" class="mypic">
        </div>
        <div class="mypinfo">
            {{ cv.adresse }}, <br/>
            {{ cv.codePostal }} {{ cv.ville }} <br class="bigbr"/>
            {{ cv.telephone }} <br class="bigbr"/>
            {{ cv.mail }} <br class="bigbr"/>
            Permis B

        </div>
    </div>
    <div class="mydesc">
        <div class="myform">
            <h2>Formations</h2>
            {% for form in cv.formations %}
                {{ form.duree }} : {{ form.nom }}<br/>
                {{ form.commentaire }}<br class="bigbr"/>
            {% endfor %}
        </div>
        <div class="mycomp">
            <h2>Competences</h2>
            {% for competence in cv.competences %}
                {{ competence.nom }}    <progress value="{{ competence. niveau}}" min="0" max="100"></progress><br/>
                {{ competence.commentaire }}<br class="bigbr"/>
            {% endfor %}
        </div>
        <div class="myexp">
            <h2>Experience professionnel</h2>
            {% for experience in cv.experiences %}
                {{ experience.periode }} : {{ experience.poste }} chez {{ experience.organisme }}<br/>
                {{ experience.commentaire }}<br class="bigbr"/>
            {% endfor %}
        </div>
    </div>
{% endblock %}